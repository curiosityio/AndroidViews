<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:id="@+id/show_snackbar_copycat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show snackbar copy cat"/>

    <Button
        android:id="@+id/hide_snackbar_copycat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hide snackbar copy cat"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.levibostian.copycatsnackbar.SnackbarCopyCatView
        android:id="@+id/main_fragment_copy_cat_snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        custom:snackbar_copy_cat_text="I am a snackbar!"/>

</LinearLayout>